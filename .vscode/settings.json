{
    // Go language server settings (gopls is enabled by default)
    "go.languageServerFlags": [
        "-rpc.trace",
        "serve",
        "--debug=localhost:6060"
    ],
    // Formatting
    "go.formatTool": "goimports",
    "go.formatFlags": [],
    "editor.formatOnSave": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "golang.go"
    },
    // Linting configuration - Use Go extension's built-in golangci-lint v2 support
    // Use "golangci-lint-v2" for v2.7+ compatibility (avoids --fast flag issue)
    "go.lintTool": "golangci-lint-v2",
    "go.lintOnSave": "package",
    "go.lintFlags": [],
    "go.alternateTools": {
        "golangci-lint-v2": "/opt/homebrew/bin/golangci-lint"
    },
    "go.useLanguageServer": true,
    "go.vetOnSave": "package",
    "go.diagnostic.vulncheck": "Imports",
    // Testing
    "go.testFlags": [
        "-v",
        "-cover"
    ],
    "go.testTimeout": "30s",
    "go.coverOnSave": false,
    "go.coverOnSingleTest": true,
    "go.coverOnTestPackage": true,
    "go.coverMode": "atomic",
    "go.coverShowCounts": true,
    // Build and install
    "go.installDependenciesWhenBuilding": true,
    "go.buildTags": "",
    "go.buildFlags": [],
    // Code navigation and completion
    "go.autocompleteUnimportedPackages": true,
    "go.gotoSymbol.includeImports": true,
    "go.docsTool": "godoc",
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "go.useCodeSnippetsOnFunctionSuggestWithoutType": true,
    // Tools
    "go.toolsManagement.checkForUpdates": "local",
    "go.toolsManagement.autoUpdate": false,
    // Interface implementation
    "go.implementationsCodeLens": true,
    "go.referencesCodeLens": true,
    // Gopls (Go language server) specific settings
    "gopls": {
        "build.directoryFilters": [
            "-**/node_modules",
            "-**/.git",
            "-**/dist",
            "-**/build",
            "-**/bin",
            "-**/.venv",
            "-**/__pycache__",
            "-**/saoirse-electron/node_modules",
            "-**/saoirse-ios/Pods",
            "-**/vendor"
        ],
        "ui.completion.usePlaceholders": true,
        "ui.completion.completeUnimported": true,
        "ui.diagnostic.analyses": {
            "staticcheck": true,
            "unusedparams": true,
            "unusedwrite": true,
            "nilness": true,
            "shadow": true,
            "unusedvariable": true,
            "unusedresult": true
        },
        "ui.diagnostic.staticcheck": true,
        "ui.diagnostic.diagnosticsDelay": "250ms",
        "ui.diagnostic.completionDocumentation": true,
        "ui.semanticTokens": true,
        "ui.codelenses": {
            "gc_details": false,
            "generate": true,
            "regenerate_cgo": true,
            "test": true,
            "tidy": true,
            "upgrade_dependency": true,
            "vendor": false
        },
        "ui.diagnostic.annotations": {
            "bounds": true,
            "escape": true,
            "inline": true
        }
    },
    // File associations
    "files.associations": {
        "*.mod": "go.mod",
        "*.sum": "go.sum"
    },
    // Exclude patterns
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/bin": true
    },
    // Search exclude patterns
    "search.exclude": {
        "**/node_modules": true,
        "**/bin": true,
        "**/.git": true,
        "**/vendor": true
    },
    // Editor settings for Go
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.snippetSuggestions": "top",
    "mesonbuild.selectRootDir": false
}