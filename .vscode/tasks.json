{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "golangci-lint",
            "type": "shell",
            "command": "/opt/homebrew/bin/golangci-lint",
            "args": [
                "run",
                "./..."
            ],
            "problemMatcher": {
                "owner": "golangci-lint",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*?):(\\d+):(\\d+):\\s+(.*?)\\s+\\((.*?)\\)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4,
                        "code": 5
                    }
                ]
            },
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "golangci-lint: Current Package",
            "type": "shell",
            "command": "/opt/homebrew/bin/golangci-lint",
            "args": [
                "run",
                "${relativeFileDirname}/..."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "owner": "golangci-lint",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*?):(\\d+):(\\d+):\\s+(.*?)\\s+\\((.*?)\\)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4,
                        "code": 5
                    }
                ]
            },
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            }
        }
    ]
}